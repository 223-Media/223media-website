# ========================================
# 223 MEDIA CLIENT PORTAL CONFIGURATION
# Environment Variables Template
# ========================================

# ========================================
# APPLICATION SETTINGS
# ========================================
NODE_ENV=development
PORT=3000
APP_NAME=223Media Client Portal
APP_VERSION=1.0.0
APP_URL=https://2twenty3media.com

# ========================================
# SECURITY & AUTHENTICATION
# ========================================

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_required

# Admin Credentials
ADMIN_EMAIL=2twenty3media@gmail.com
ADMIN_PASSWORD=your_secure_admin_password

# Session Secret
SESSION_SECRET=your_session_secret_key_here

# Encryption Key
ENCRYPTION_KEY=your_encryption_key_32_chars_here

# ========================================
# AIRTABLE INTEGRATION
# ========================================

# Get from: https://airtable.com/create/tokens
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# Airtable Table Names
AIRTABLE_CLIENTS_TABLE=Clients
AIRTABLE_PROJECTS_TABLE=Projects
AIRTABLE_EPISODES_TABLE=Episodes
AIRTABLE_PACKAGES_TABLE=Packages
AIRTABLE_TEAM_TABLE=Team Members
AIRTABLE_WORKFLOWS_TABLE=Workflows
AIRTABLE_COMMUNICATIONS_TABLE=Communications

# ========================================
# STRIPE PAYMENT INTEGRATION
# ========================================

# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Webhook Configuration
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Product IDs (create in Stripe Dashboard)
STRIPE_GROWTH_PRICE_ID=price_growth_package_497
STRIPE_SCALE_PRICE_ID=price_scale_package_997
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_lite_1497
STRIPE_WEBSITE_PRICE_ID=price_website_management_297
STRIPE_EPISODE_PRICE_ID=price_single_episode_110

# ========================================
# HUBSPOT CRM INTEGRATION
# ========================================

# Get from: https://app.hubspot.com/private-apps/
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token
HUBSPOT_PORTAL_ID=your_hubspot_portal_id

# HubSpot Settings
HUBSPOT_DEAL_PIPELINE_ID=default
HUBSPOT_CONTACT_OWNER=223media_team
HUBSPOT_COMPANY_OWNER=223media_team

# ========================================
# BREVO EMAIL MARKETING
# ========================================

# Get from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key

# Email Configuration
BREVO_FROM_EMAIL=2twenty3media@gmail.com
BREVO_FROM_NAME=223 Media Team
BREVO_REPLY_TO=2twenty3media@gmail.com

# Email List IDs (create in Brevo)
BREVO_CLIENTS_LIST_ID=1
BREVO_PROSPECTS_LIST_ID=2
BREVO_NEWSLETTER_LIST_ID=3

# Email Template IDs (create in Brevo)
BREVO_WELCOME_TEMPLATE_ID=1
BREVO_EPISODE_READY_TEMPLATE_ID=2
BREVO_FEEDBACK_REQUEST_TEMPLATE_ID=3
BREVO_INVOICE_TEMPLATE_ID=4

# ========================================
# MOTION PROJECT MANAGEMENT
# ========================================

# Get from: https://www.usemotion.com/settings/api
MOTION_API_KEY=your_motion_api_key

# Motion Configuration
MOTION_WORKSPACE_ID=your_motion_workspace_id
MOTION_DEFAULT_ASSIGNEE=223media_team
MOTION_PROJECT_PREFIX=223M

# ========================================
# FILE UPLOAD SETTINGS
# ========================================

# Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=mp3,wav,mp4,mov,pdf,docx,txt,jpg,png
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# Storage Settings
STORAGE_TYPE=local
MAX_STORAGE_SIZE=1GB

# ========================================
# DATABASE & CACHING
# ========================================

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Database URL (if using external database)
DATABASE_URL=your_database_connection_string

# ========================================
# LOGGING & MONITORING
# ========================================

# Log Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Error Tracking
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=223Media Client Portal

# ========================================
# RATE LIMITING & SECURITY
# ========================================

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MODE=false

# CORS Settings
CORS_ORIGIN=https://2twenty3media.com,https://www.2twenty3media.com
CORS_CREDENTIALS=true

# Security Headers
SECURITY_HSTS=true
SECURITY_NOSNIFF=true
SECURITY_FRAME_GUARD=deny

# ========================================
# WEBHOOK ENDPOINTS
# ========================================

# Stripe Webhooks
STRIPE_WEBHOOK_URL=https://2twenty3media.com/api/webhooks/stripe

# Zapier Integration
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_zapier_webhook

# Internal Webhooks
INTERNAL_WEBHOOK_SECRET=your_internal_webhook_secret

# ========================================
# BACKUP & MAINTENANCE
# ========================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Development Flags
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTH_IN_DEV=false
ENABLE_CONSOLE_LOGS=true

# Test Configuration
TEST_DATABASE_URL=sqlite::memory:
TEST_STRIPE_KEY=sk_test_your_test_stripe_key
TEST_WEBHOOK_SECRET=test_webhook_secret

# ========================================
# PRODUCTION SETTINGS
# ========================================

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Production Optimization
COMPRESS_RESPONSES=true
CACHE_STATIC_FILES=true
TRUST_PROXY=true

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ========================================
# FEATURE FLAGS
# ========================================

# Core Features
ENABLE_CLIENT_PORTAL=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Integration Features
ENABLE_STRIPE_INTEGRATION=true
ENABLE_AIRTABLE_INTEGRATION=true
ENABLE_HUBSPOT_INTEGRATION=true
ENABLE_BREVO_INTEGRATION=true
ENABLE_MOTION_INTEGRATION=true

# Advanced Features
ENABLE_ANALYTICS=true
ENABLE_BACKUP_SYSTEM=true
ENABLE_WEBHOOK_PROCESSING=true
ENABLE_RATE_LIMITING=true

# ========================================
# CONTACT & SUPPORT
# ========================================

# Company Information
COMPANY_NAME=223 Media
COMPANY_EMAIL=2twenty3media@gmail.com
COMPANY_PHONE=your_phone_number
COMPANY_ADDRESS=your_business_address

# Support Configuration
SUPPORT_EMAIL=2twenty3media@gmail.com
SUPPORT_HOURS=Mon-Fri 9AM-5PM EST
EMERGENCY_CONTACT=your_emergency_contact

# ========================================
# SETUP INSTRUCTIONS
# ========================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Update all values with your actual API keys and settings
# 3. Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 4. Test your configuration: npm run setup
# 5. Start the server: npm start

# ========================================
# SECURITY NOTES
# ========================================

# IMPORTANT:
# - Never commit the actual .env file to version control
# - Use strong, unique passwords and API keys
# - Rotate secrets regularly in production
# - Enable 2FA on all external service accounts
# - Monitor API usage and set up alerts
