{
  "name": "223media-website-portal",
  "version": "1.0.0",
  "description": "223 Media complete website with integrated client portal system - transforming podcasts into complete digital growth engines",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "build": "echo 'Build complete - static website ready'",
    "deploy": "echo 'Ready for deployment'",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "logs": "pm2 logs 223media-portal",
    "restart": "pm2 restart 223media-portal",
    "stop": "pm2 stop 223media-portal",
    "backup": "node scripts/backup.js",
    "setup-integrations": "node scripts/setup-integrations.js"
  },
  "keywords": [
    "223media",
    "podcast",
    "content-ecosystem",
    "client-portal",
    "airtable",
    "stripe",
    "hubspot",
    "brevo",
    "motion",
    "automation",
    "content-management"
  ],
  "author": {
    "name": "223 Media",
    "email": "2twenty3media@gmail.com",
    "url": "https://2twenty3media.com"
  },
  "license": "MIT",
  "homepage": "https://2twenty3media.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/223-Media/223media-website.git"
  },
  "bugs": {
    "url": "https://github.com/223-Media/223media-website/issues",
    "email": "2twenty3media@gmail.com"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "stripe": "^14.9.0",
    "airtable": "^0.12.2",
    "@hubspot/api-client": "^10.2.0",
    "sib-api-v3-sdk": "^8.5.0",
    "archiver": "^6.0.1",
    "sharp": "^0.33.1",
    "express-validator": "^7.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.11",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/tests/**",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "api/",
      ".env"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "coverage/",
      "logs/",
      "uploads/",
      "backups/"
    ],
    "delay": 1000
  },
  "config": {
    "port": 3000,
    "environment": "development"
  },
  "funding": {
    "type": "business",
    "url": "https://2twenty3media.com"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "lib": "./api",
    "test": "./api/tests",
    "doc": "./docs"
  },
  "files": [
    "server.js",
    "api/",
    "portal/",
    "admin/",
    "assets/",
    "css/",
    "js/",
    "index.html",
    "portal.html",
    "admin.html",
    "README.md",
    "LICENSE"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
